  <style>
    html,body{
      text-align:left;
      font-size:1em;
      background: #f4f4f4;
      font-family:"Open Sans","Myriad Pro",Arial,sans-serif;
    }
    html,body,img,form,textarea,input,fieldset,div,p,div,ul,li,ol,dl,dt,dd,h1,h2,h3,h4,h5,h6,pre,code{
      margin:0;
      padding:0
    }
    ul,li{
      list-style:none
    }
    img{
      display:block
    }
    a img{
      border:0
    }
    a{
      text-decoration:none;
      font-weight:normal;
      font-family:inherit
    }
    *:active,
    *:focus{
      outline:0;
      -moz-outline-style:none
    }
    h1,h2,h3,h4,h5,h6,h7{
      font-weight:normal;
      font-size:1em
    }
