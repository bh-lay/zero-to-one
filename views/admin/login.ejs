      clear:both;
      content:".";
      display:block;
      font-size:0;
      height:0;
      line-height:0;
      visibility:hidden
    }
    .page .ocean{
      background:url('http://sailsjs.com/images/waves.png') #0c8da0 no-repeat center 270px;
      height:180px;
      padding-top: 120px;
    }
    .page .ocean img{
      margin-right:auto;
      margin-left:auto
    }
    .login-panel{
      width: 340px;
      height:360px;
      margin: auto;
      background: #fff;
    }
    .login-panel h1{
      padding: 40px 0 10px;
      font-weight:bold;
      font-size:1.7em;
      color:#001c20;
      text-align:center
    }
    .login-panel .input-list{
      height: 180px;
    }
    .login-panel a{
      display: block;
      margin: 0 50px;
      height:40px;
      line-height: 40px;
      color:#fff;
      text-align:center;
      background: #0c8da0;
    }
